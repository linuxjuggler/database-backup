{
    "name": "damascene/database-backup",
    "description": "This is just a small CLI app which will create a backup from your database",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "league/flysystem": "^1.0",
        "nesbot/carbon": "1.22.1",
        "roave/security-advisories": "dev-master",
        "spatie/flysystem-dropbox": "^1.0",
        "symfony/console": "^3.3",
        "symfony/filesystem": "^3.3",
        "symfony/finder": "^3.3",
        "symfony/process": "^3.3",
        "symfony/stopwatch": "^3.3",
        "symfony/yaml": "^3.3",
        "tightenco/collect": "^5.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Mhd Zaher Ghaibeh",
            "email": "z@zah.me"
        }
    ],
    "require-dev": {
        "pds/skeleton": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Backup\\" : "src/Backup"
        }
    },
    "bin" : ["bin/backup"],
    "minimum-stability": "stable",
    "extra": {
        "phar-builder": {
            "compression": "GZip",
            "name": "backup.phar",
            "output-dir": "./build",
            "entry-point": "./bin/backup",
            "include-dev": false,
            "events": {
                "build.before": "git describe --tags > bin/version.txt",
                "build.after": [
                    "rm bin/version.txt",
                    "chmod +x build/builder.phar"
                ]
            }
        }
    }
}
